{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,         // ✅ Added to skip library type checking
    "typeRoots": ["./node_modules/@types"] // ✅ Added to force correct type resolution
  },
  "include": [
    "src/**/*.ts",
    "src/db_tools.ts",
    "src/clear_all_output_requests.ts",
    "src/reset_db.mjs",
    "src/clear_outputs.tzs"
  ],
  "exclude": [
    "node_modules"
  ]
}
